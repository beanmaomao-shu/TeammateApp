.box {
  width: 360rpx;
  height: 70rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}
.teamInfo {
  margin: 20rpx 0;
}
.teamInfo .horizontal {
  display: flex;
  justify-content: space-evenly;
  margin-bottom: 20rpx;
}
.teamInfo .horizontal .avatar {
  magrin-right: 86rpx;
}
.teamInfo .horizontal .avatar .teamImg {
  width: 180rpx;
  height: 180rpx;
}
.teamInfo .description {
  margin: 0 auto;
  width: 688rpx;
}
.teamInfo .description .desArea {
  width: 624rpx;
  height: 216rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  padding: 20rpx;
  overflow: scroll;
}
.members {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 688rpx;
  height: 140rpx;
}
.members .avatarsList {
  display: flex;
  justify-content: center;
}
.members .avatarsList .avatar {
  width: 80rpx;
  height: 80rpx;
}
.require {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 688rpx;
}
.require .numbers, .require .time, .require .region {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.require .numbers .box, .require .time .box, .require .region .box {
  margin-left: 12rpx;
}
.require .numbers {
  margin-top: 20rpx;
}
.require .numbers uni-data-picker {
  width: 100%;
}
.require .region .box, .require .numbers .box {
  justify-content: center;
  font-size: 28rpx;
  color: #808080;
}
.require .region .box uni-icons, .require .numbers .box uni-icons {
  margin-left: 10rpx;
}
.btnArea {
  margin-top: 100rpx;
}